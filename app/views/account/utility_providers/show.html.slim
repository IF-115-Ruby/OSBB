- breadcrumbs [\
  { home: true, url: home_path },\
  { title: 'Utility providers', url: account_utility_providers_path },\
  { title: 'Show' }\
]
.content.pt-4
  .form-component
    h1.title
      = t('.contract')
      =< @utility_provider.contract_num
    .content-info
      .info-content
        span.name
          = t('.status')
        span.value = t(status_contract(@utility_provider.is_active))
      .info-content
        span.name
          = t('.created')
        span.value = l(@utility_provider.created_at, format: :long)
    .d-flex.justify-content-around.flex-wrap
      = link_to t('.btn-show'), account_utility_provider_meter_readings_path(utility_provider_id: @utility_provider.id),
        class: 'btn btn-primary btn-custom'
      = link_to t('.btn-delete'), disassociate_account_utility_provider_path(@utility_provider),
        method: :put, data: { confirm: t('.are_you_sure') },
        class: 'btn btn-danger btn-custom'
      = link_to t('.btn-add'), new_account_utility_provider_meter_reading_path(utility_provider_id: @utility_provider.id),
        class: 'btn btn-success btn-custom'
      = link_to 'Payments', account_utility_provider_payments_path(@utility_provider), class: 'btn btn-info btn-custom'
      = link_to t('.btn-back'), account_utility_providers_path,
        class: 'btn btn-dark btn-custom'
