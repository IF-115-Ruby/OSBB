- breadcrumbs [\
  { home: true, url: home_path },\
  { title: 'Companies', url: account_admin_companies_path },\
  { title: 'Company' }\
]
.content.pt-4
  .form-component
    h1.title = t('companies.show.show_title')
    .content-info
      .info-content
        span.name = t('companies.show.company_name')
        span.value = @company.name
      .info-content
        span.name = t('companies.show.company_type')
        span.value = @company.company_type
      .info-content
        span.name = t('companies.show.phone')
        span.value = @company.phone
      .info-content
        span.name = t('companies.show.email')
        span.value = @company.email
      .info-content
        span.name = t('companies.show.website')
        span.value = @company.website
      .info-content
        span.name = t('companies.show.fax')
        span.value = @company.fax
      .info-content
        - if @company.address
          span.name = t('companies.show.company_address')
          - if @company.address.query
            .map-box
              = image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=400x300&markers=size:small%7Ccolor:red%7C#{@company.address.query.coordinates.first},#{@company.address.query.coordinates.last}&key=AIzaSyB79BaHbHY_1floWCNQ1nlSx78zj6CYG04", alt: "Map"
              span.value = @company.address.full_address
    .d-flex.justify-content-around.flex-wrap
      = link_to edit_account_admin_company_path, class: "btn btn-warning btn-custom"
        = t('companies.show.btn_edit_company')
      = link_to [:account, :admin, @company], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-custom"
       = t('companies.show.btn_delete_company')
      = link_to account_admin_companies_path, class: "btn btn-info btn-custom"
        = t('companies.show.btn_back')
      = link_to t('companies.show.btn_billing_contracts'),
        account_admin_company_billing_contracts_path(@company),
        class: 'btn btn-primary btn-custom'
