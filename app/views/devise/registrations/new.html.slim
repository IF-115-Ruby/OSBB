.custom-form-wrapper
  section
    .container
      .content-abc.mx-auto.shadow.m-3
        h1.pt-4.font-weight-bold.row.justify-content-center
          = title t('devise.registrations.new.tab_title'),
            t('devise.registrations.new.registration_title')
        hr
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .container.form-prop
            .container.form-horizontal.mb-2.mt-4
              p.form-group
                .row
                  i.fas.fa-user.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :first_name, autofocus: true, label: false,
                      placeholder: t('account.users.form.first-name'),
                      input_html: { class: 'form-control input-prop' }
              p.form-group
                .row
                  i.fas.fa-user.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :last_name, autofocus: true, label: false,
                      placeholder: t('account.users.form.last-name'),
                      input_html: { class: 'form-control input-prop' }
              p.form-group
                .row
                  i.fas.fa-envelope.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :email, autofocus: true, label: false,
                      placeholder: t('change_pass.email'),
                      input_html: { class: 'form-control input-prop' }
              p.form-group
                .row
                  i.fas.fa-venus-mars.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :sex, collection: options_for_sex,
                      label: false, selected: 'no_sex',
                      input_html: { class: 'form-control input-prop' }
              p.form-group
                .row
                  i.fas.fa-phone.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :mobile, autofocus: true, label: false,
                      placeholder: t('account.admin.osbbs.form.label-phone'),
                      input_html: { class: 'form-control input-prop' }
              p.form-group
                .row
                  i.fas.fa-key.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :password, autofocus: true,
                      label: false, hint: false,
                      placeholder: t('devise.password.edit.password_placeholder'),
                      input_html: { class: 'form-control input-prop' }
              p.form-group
                .row
                  i.fas.fa-key.fa-lg.fa-fw.mt-2.control-label.col-sm-2.icon-prop
                  .col-sm-10
                    = f.input :password_confirmation, autofocus: true,
                      label: false, hint: false,
                      placeholder: t('devise.password.edit.confirm_password_placeholder'),
                      input_html: { class: 'form-control input-prop' }
            .form-actions.mt-3
              .container.d-flex.justify-content-center
                = f.submit t('devise.shared.sign_up_link'),
                  class: 'btn btn-submit pl-5 pr-5'
            hr
            .container.pb-3
              .d-flex.justify-content-center.links.mt-2
                = t('devise.registrations.new.have_account_text')
                = render 'devise/shared/links'
